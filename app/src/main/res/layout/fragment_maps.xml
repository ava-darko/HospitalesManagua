<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MapsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ededef">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicos"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/publico"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privados"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/privado"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF">
        <Button
            android:id="@+id/hibrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hibrido"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <Button
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
           />
        <Button
            android:id="@+id/satelital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satelite"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
            android:id="@+id/terreno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terreno"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            />
    </LinearLayout>


<fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    class="com.google.android.gms.maps.MapFragment"/>


</LinearLayout>